mysqldb:
  image: mysql
  pull: true
  remove: false
  name: mysql_${PWD##*/}
  e:
   - MYSQL_ROOT_PASSWORD=passwd
  prompt_password:
   passwd: "Please enter a MySQL root password: "
  notes:
   - MySQL is now running on port 3306.
   - Remember what you used as your password!
kcmerrill/base:
 require:
  - kcmerrill/automagicproxy
 image: kcmerrill/base
 remove: true
 name: ${PWD##*/}
 setup: 
   - mkdir www
   - echo "yoda works!" > www/index.php
   - docker exec -t -i automagicproxy /automagicproxy/bin/reload
 P: true
 v:
  - $PWD:/var/www/html
 notes:
  - Simply rename this root folder to be your new subdomain
  - Your webserver is running  ${PWD##*/}.$HOSTNAME
